        a(href="#", arial-label="Ссылка на фейсбук").social-link
          svg.social-icon
            use(xmlns:xlink='http://www.w3.org/1999/xlink', xlink:href='img/spritesvg.svg#facebook')
      li.social-icon-item
        a(href="#", arial-label="Ссылка на инстаграм").social-link
          svg.social-icon
            use(xmlns:xlink='http://www.w3.org/1999/xlink', xlink:href='img/spritesvg.svg#instagram')
    .enter-panel
      button.btn.btn--auth.enter-panel__btn Вход
      button.btn.btn--registration.enter-panel__btn Регистрация
    |@endif